// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model CustomerVisit {
  id                          Int    @id @default(autoincrement())
  orderId                     String
  orderName                   String
  orderNote                   String?
  orderUpdatedAt              DateTime
  customerId                  String
  customerName                String?
  customerOrderIndex          Int?
  daysToConversion            Int?
  momentsCount                Int?
  firstVisitLandingPage       String?
  firstVisitOccuredAt         DateTime?
  firstVisitReferralCode      String?
  firstVisitReferralInfoHtml  String?
  firstVisitReferrerUrl       String?
  firstVisitSource            String?
  firstVisitSourceDescription String?
  firstVisitSourceType        String?
  firstVisitUtmCampaign       String?
  firstVisitUtmContent        String?
  firstVisitUtmMedium         String?
  firstVisitUtmSource         String?
  firstVisitUtmTerm           String?
  lastVisitLandingPage        String?
  lastVisitOccuredAt          DateTime?
  lastVisitReferralCode       String?
  lastVisitReferralInfoHtml   String?
  lastVisitReferrerUrl        String?
  lastVisitSource             String?
  lastVisitSourceDescription  String?
  lastVisitSourceType         String?
  lastVisitUtmCampaign        String?
  lastVisitUtmContent         String?
  lastVisitUtmMedium          String?
  lastVisitUtmSource          String?
  lastVisitUtmTerm            String?
}

model TrailPixel {
  id                          Int       @id @default(autoincrement())
  order_name                  String
  order_updated_at            DateTime
  days_to_conversion          Int?
  moments_count               Int?
  trail_pixel                 String?
  synced                      Boolean   @default(false)
}