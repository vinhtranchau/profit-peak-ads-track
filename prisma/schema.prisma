generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model TrailPixel {
  id                          Int       @id @default(autoincrement())
  order_name                  String
  order_updated_at            DateTime
  days_to_conversion          Int?
  moments_count               Int?
  trail_pixel                 String?
  synced                      Boolean   @default(false)
}